<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HYBEF" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#000000</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Point" parent="android:Widget.TextView">
        <item name="android:textColor">@color/point</item>
        <item name="android:fontFamily">@font/nirmala</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="MainStyle_E" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/nirmala</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white_b</item>
    </style>

    <style name="MainStyle_K" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/notosans</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white_b</item>
    </style>

    <style name="MenuItemFont" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/notosans</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white_b</item>
    </style>

    <style name="Comment_text" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/notosans</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white_b</item>
    </style>

    <style name="ListV_title" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/notosans</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white_b</item>
    </style>

    <style name="ListV_comment" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/notosans</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white_b</item>
    </style>

    <style name="header_logo" parent="android:Widget.TextView" >
        <item name="android:fontFamily">@font/nirmala</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ArtistFont" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/nirmala</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Artist_all" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/notosans</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/point</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>